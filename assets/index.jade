  body
    div.pp-wrapper
      each option in pageOptions
        if (pageOptions.option == headerImage)
          - if (option.headerImage == '') {
            section#privacy-policy-intro.pp-container
              div.privacy-policy-intro-copy
                each option in pageOptions
                  h1!= option.headline
                  p!= option.subHeading
          - }
          - else {
            section#privacy-policy-intro.pp-container
              each option in pageOptions
                .privacy-policy-branding
                  each option in pageOptions
                    img.pp-logo(src=option.headerImage)

                div.privacy-policy-intro-copy
                  each option in pageOptions
                    h1!= option.headline
                    p!= option.subHeading
          - }

      include main

      each option in pageOptions
        section#privacy-policy-copy-footer
          p!= option.footerContent

